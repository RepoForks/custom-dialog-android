<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="1dip" android:color="#d5492c" />
            <gradient android:angle="-90" android:startColor="#d5492c" android:endColor="#d5492c"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="1dip" android:color="#d5492c" />
            <solid android:color="#d5492c"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="1dip" android:color="#FF5B39" />
            <gradient android:angle="-90" android:startColor="#FF5B39" android:endColor="#FF5B39" />
        </shape>
    </item>
</selector>